{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "portable",
            "type": "shell",
            "command": "./portable.sh"
        },
        {
            "label": "wsl portable",
            "type": "shell",
            "command": "wsl ./portable.sh"
        },
        {
            "label": "choco install -y",
            "type": "shell",
            "command": "elevation.cmd",
            "args": ["choco", "install", "-y", "${selectedText}"],
            "options": {
                "cwd": "${workspaceFolder}\\scripts"
            }
        },
        {
            "label": "choco install",
            "type": "shell",
            "command": "elevation.cmd",
            "args": ["choco", "install", "${selectedText}"],
            "options": {
                "cwd": "${workspaceFolder}\\scripts"
            }
        },
        {
            "label": "Open choco package in browser",
            "type": "shell",
            "command": "explorer",
            "args": ["https://chocolatey.org/packages/${selectedText}"]
        }
    ]
}